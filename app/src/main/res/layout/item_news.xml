<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="article"
            type="com.example.task3.data.data_source.remote.dto.news.Article" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:background="@{article.title == null ? @color/black_half : @android:color/transparent}"
            android:text="@{article.title}"
            android:textSize="18sp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginEnd="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_view"/>

        <TextView
            android:id="@+id/tv_date"
            android:background="@{article.title == null ? @color/black_half : @android:color/transparent}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/gray"
            android:text="@{article.publishedAt}"
            app:layout_constraintEnd_toStartOf="@id/tv_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <TextView
            android:id="@+id/tv_author"
            android:background="@{article.title == null ? @color/black_half : @android:color/transparent}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="@{article.author}"
            app:layout_constraintEnd_toStartOf="@id/card_view"
            app:layout_constraintStart_toEndOf="@id/tv_date"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/black_half"
                imageUrl="@{article.urlToImage}"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>